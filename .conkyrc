conky.config = {
	background = true,
	use_xft = true,
	font = 'urwgothicl:pixelsize=11',
	xftalpha = 1,
	update_interval = 1,
	total_run_times = 0,
    border_inner_margin = 60,
    border_outer_margin = 0,
	own_window = true,
	own_window_type = 'normal',
    own_window_argb_visual = true,
    own_window_argb_value = 120,
	own_window_transparent = false,
    own_window_colour = '#001126',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	double_buffer = true,
	minimum_width = 537, minimum_height = 0,
	maximum_width = 537,
    minimum_height = 650,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,
	default_color = 'white',
	default_shade_color = 'white',
	default_outline_color = '#001126',
    default_bar_height = 2,
	alignment = 'middle_left',
	gap_x = 108,
	gap_y = 0,
	no_buffers = true,
	uppercase = false,
	cpu_avg_samples = 2,
	override_utf8_locale = true

};conky.text = [[
$alignc${font urwgothicl:pixelsize=135:weight=regular}${time %H:%M}${font}


$alignc${font urwgothicl:pixelsize=20:weight=regular}${time %A %d %B %Y}${font}
${font urwgothicl:pixelsize=10:weight=regular}
${hr 3}

${image ~/.config/conky/sidepanes/res/weather.png -p 66,218 -s 92x92} 

${font urwgothicl:pixelsize=15:weight=regular}$alignc${rss http://rss.accuweather.com/rss/liveweather_rss.asp?metric=1&locCode=EUR|FR|FR114|RENNES 300 item_titles 1}${font}



${image ~/.config/conky/sidepanes/res/wifi.png -p 62,295 -s 92x92}
$alignc${font urwgothicl:pixelsize=15:weight=regular}${wireless_essid}
$alignc${wireless_bitrate wlp4s0} (${wireless_link_qual_perc wlp4s0}%)${font} 




$alignr${image ~/.config/conky/sidepanes/res/cpu.png -p 90,440 -s 32x32} 
$alignc${cpu cpu0}%
$alignc${cpubar 8,200 cpu0}
$alignc Core 0 = ${hwmon 1 temp 2} C° / Core 1 = ${hwmon 1 temp 3} C°

$alignc${image ~/.config/conky/sidepanes/res/ram.png -p 90,509 -s 32x32} 
$alignc($memperc%) $mem / $memmax 
$alignc${membar 8,200}

${image ~/.config/conky/sidepanes/res/battery.png -p 90,565 -s 32x32}
$alignc Remaining ${battery_time BAT0}
$alignc${battery_bar 8,200 BAT0}
$alignc${battery_short}  
${font}
]];


